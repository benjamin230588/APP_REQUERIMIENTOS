<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="APP_REQUERIMIENTOS.Alertas.MensajeDelete"
    xmlns:lotie="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
    CanBeDismissedByTappingOutsideOfPopup="False"
    >

    <Grid BackgroundColor="#80000000"
          VerticalOptions="FillAndExpand"
          HorizontalOptions="FillAndExpand">

        <!-- Contenedor del popup -->
        <Frame x:Name="PopupFrame"
               BackgroundColor="White"
             
               CornerRadius="16"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               HasShadow="True"
               Opacity="0"
               Scale="0.7">

            <VerticalStackLayout Spacing="16" Padding="20" VerticalOptions="Center">

                <lotie:SKLottieView Source="delete23.json"
                     RepeatMode="Restart"
                     RepeatCount="50"
                     WidthRequest="100"
                     HeightRequest="100"
                                    />
                <StackLayout></StackLayout>

                <Label Text="Seguro de Emiminar?"
                       FontSize="18"
                       HorizontalOptions="Center"
                       TextColor="Black"/>
                <StackLayout Orientation="Horizontal" Spacing="15" HorizontalOptions="CenterAndExpand"> 
                <Button Text="NO"
                        WidthRequest="70"
                        BackgroundColor="Red"
                        Clicked="OnOkClickedNO"/>

                <Button Text="SI"
                        BackgroundColor="Blue"
                        WidthRequest="70"
                       
                        Clicked="OnOkClickedSI"/>
                </StackLayout>
                <StackLayout></StackLayout>
            </VerticalStackLayout>
        </Frame>
    </Grid>
</toolkit:Popup>
