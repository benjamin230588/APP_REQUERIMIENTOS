<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="APP_REQUERIMIENTOS.Alertas.alertaperson">

    <VerticalStackLayout Padding="20" Spacing="15"
                         BackgroundColor="White"
                         HorizontalOptions="CenterAndExpand">
        <StackLayout/>
        <StackLayout/>
        <StackLayout/>
        <Label Text="¿Estás seguro de continuar?" 
               FontSize="18" 
               HorizontalOptions="Center" />

        <HorizontalStackLayout HorizontalOptions ="CenterAndExpand" Spacing="20">
            <Button Text="Sí" WidthRequest="60"
                    Clicked="OnYesClicked" />
            <Button Text="No" WidthRequest="60"
                    Clicked="OnNoClicked" />
        </HorizontalStackLayout>
        <StackLayout/>
        <StackLayout/>
    </VerticalStackLayout>
</toolkit:Popup>
