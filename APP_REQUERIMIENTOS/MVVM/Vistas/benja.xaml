<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APP_REQUERIMIENTOS.MVVM.Vistas.benja"
             Title="benja">
    <VerticalStackLayout Padding="15" Spacing="12">

        <!-- Botón Agregar -->
        <Button Text="Agregar"
                x:Name="btnAgregar123"
                HeightRequest="45"
                CornerRadius="8" />

        <!-- CollectionView -->
        <CollectionView x:Name="cvItems"
                SelectionMode="None">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <grid Padding="10" Spacing="20">

                        <!-- Nombre del artículo -->
                        <Label Text="{Binding Nombre}"
                       FontSize="18"
                       WidthRequest="120" />

                       
                        <!-- Cantidad -->
                        <Label x:Name="lblCantidad"
                       Text="{Binding Cantidad}"
                       FontSize="18"
                       VerticalOptions="Center" />

                        <!-- Stepper -->
                        <Stepper Minimum="0"
                         Maximum="100"
                         Increment="1"
                         Value="{Binding Cantidad}"
                                 BackgroundColor="LightGray"
         
                         ValueChanged="Stepper_ValueChanged" />

                    </grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>

</ContentPage>