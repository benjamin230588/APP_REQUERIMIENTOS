<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APP_REQUERIMIENTOS.MVVM.Vistas.benja"
             Title="benja">
    <Grid>
        <!-- CollectionView -->
        <CollectionView x:Name="cvItems"
                SelectionMode="None" ItemSizingStrategy="MeasureFirstItem"
                ItemsLayout="VerticalGrid,2"
                VerticalScrollBarVisibility="Never">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border 
                        StrokeShape="RoundRectangle 30"
                        BackgroundColor="White"
                        Padding="2,2"
                        Margin="5,5"
                        HeightRequest="250" >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="120" />
                                <RowDefinition Height="50" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="30" />
                            </Grid.RowDefinitions>
                            <Image Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Source="https://cdn.pixabay.com/photo/2014/10/23/18/05/burger-500054_1280.jpg"
                             Aspect="AspectFill"  WidthRequest="150" HeightRequest="120" HorizontalOptions="CenterAndExpand" />
                            

                            <Label Text="{Binding Nombre}" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"
                              FontAttributes="Bold" FontSize="16"/>
                           
                            <Label x:Name="lblCantidad" Grid.Column="0" Grid.Row="2"
                              Text="{Binding Cantidad}"
                              FontSize="18"
                              VerticalOptions="Center"  HorizontalTextAlignment="Center"/>
                            <Stepper Minimum="0" Grid.Column="1" Grid.Row="2"
                            Maximum="100"
                            Increment="1"
                            Value="{Binding Cantidad}"   
                            ValueChanged="Stepper_ValueChanged" />
                           

                            <Button Text="Agregar" Grid.Column="0" Padding="10,2"  Grid.Row="3" Grid.ColumnSpan="2"  HorizontalOptions="Center" ></Button>


                        </Grid>
                        

                    </Border>


                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>

</ContentPage>