<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APP_REQUERIMIENTOS.MVVM.Vistas.compara"
             Title="compara">
    <Grid>

        <CollectionView x:Name="cvCanales"
                      SelectionMode="Single"
                      ItemsLayout="VerticalList">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame CornerRadius="10"
                         Padding="10"
                         Margin="4"
                         HasShadow="True">
                        <Grid ColumnDefinitions="60, *" RowDefinitions="Auto">
                            <Image Source="{Binding Imagen}"
                                 WidthRequest="50" HeightRequest="50"
                                 Aspect="AspectFill"
                                 VerticalOptions="Center" />
                            <VerticalStackLayout Grid.Column="1" Spacing="2" Padding="8,0,0,0">
                                <Label Text="{Binding Nombre}" FontAttributes="Bold" FontSize="16"/>
                                <Label Text="{Binding Descripcion}" LineBreakMode="TailTruncation" FontSize="13"/>
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>