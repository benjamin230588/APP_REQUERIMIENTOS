<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APP_REQUERIMIENTOS.MVVM.Vistas.PrincipalMasterView"
             xmlns:pagina="clr-namespace:APP_REQUERIMIENTOS.MVVM.Vistas"
             Title="PrincipalMasterView">
    <FlyoutPage.Flyout>
        <ContentPage Title="Menú" BackgroundColor="LightGray">
            <StackLayout Padding="20">
                <Label Text="Menú principal" FontSize="24"/>
               
            </StackLayout>
        </ContentPage>
    </FlyoutPage.Flyout>

    <!-- Contenido principal -->
    <FlyoutPage.Detail>
        <NavigationPage x:Name="Navigacion">
            <x:Arguments>
                <pagina:PrincipalView></pagina:PrincipalView>

            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
</FlyoutPage>