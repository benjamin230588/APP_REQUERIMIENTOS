<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APP_REQUERIMIENTOS.MVVM.Vistas.coleccion"
             Title="Agenda">
    <StackLayout Orientation="Vertical">

        <CollectionView Margin="5"  x:Name="lstCategoria12"   ItemsSource="{Binding lista}"  VerticalOptions="FillAndExpand"> 
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" VerticalItemSpacing="7"  >

                </GridItemsLayout>

            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>

                    <Frame BackgroundColor="#FAFAFA"  HasShadow="True" CornerRadius="10" Margin="5,0,5,10" Padding="10,10,13,10" BorderColor="#848484" IsClippedToBounds="True" >
                        <StackLayout Orientation="Vertical"  >

                            <Grid >
                                
                                <Label Text="{Binding apellido , Mode=TwoWay}" TextColor="#2E64FE"  />
                              
                              
                            </Grid>

                        </StackLayout>
                      
                    </Frame>

                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
       
    </StackLayout>
</ContentPage>