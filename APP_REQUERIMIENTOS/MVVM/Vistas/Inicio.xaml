<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APP_REQUERIMIENTOS.MVVM.Vistas.Inicio"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="BurlyWood">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary">#165ded</Color>
            <Color x:Key="Secondary">#7b0cf1</Color>
            <Color x:Key="tercero">#ffffff</Color>
            <Color x:Key="SecondaryColor">#9742ff</Color>

            <Style x:Key="btningresar" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource Secondary}" />
                <Setter Property="TextColor" Value="{StaticResource tercero}" />

            </Style>

            <Style TargetType="Entry">
                <Setter Property="BackgroundColor" Value="Transparent" />
               
               
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout 
        Margin="10"
    BackgroundColor="Red">

        <BoxView BackgroundColor="Blue" HeightRequest="2"></BoxView>
        <Button 
        Text="DALE"
        Clicked="Button_Clicked"
        BackgroundColor="#00D0B6"
       
        HorizontalOptions="Fill" />
        <BoxView BackgroundColor="Blue" HeightRequest="2"></BoxView>

    </StackLayout>

</ContentPage>