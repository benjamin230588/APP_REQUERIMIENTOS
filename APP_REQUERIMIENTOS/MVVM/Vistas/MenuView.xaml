<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APP_REQUERIMIENTOS.MVVM.Vistas.MenuView"
             Title="MenuView">
    <StackLayout Padding="10">

        <Label Text="Bienvenido al sistema" FontAttributes="Bold" HorizontalTextAlignment="Center" FontSize="20" />
        <Label Text="{Binding Activeusuario}" FontAttributes="Bold" HorizontalTextAlignment="Center" FontSize="14" Margin="0" TextTransform="Uppercase"/>

        <ListView ItemsSource="{Binding listamenu}" Margin="0,10"  x:Name="lstMenu" ItemTapped="lstMenu_ItemTapped" >

            <ListView.ItemTemplate>

                <DataTemplate>

                    <ViewCell>

                        <Grid>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <StackLayout Grid.Column="0" Grid.Row="0" 
                                             Orientation="Horizontal" HorizontalOptions="Start" Spacing="20" >


                                <Image Source="{Binding nombreicono}" WidthRequest="50" HeightRequest="50" Aspect="AspectFill"/>

                                <Label Text="{Binding nombreitem}" VerticalOptions="Center"  />

                            </StackLayout>


                        </Grid>



                    </ViewCell>


                </DataTemplate>


            </ListView.ItemTemplate>


        </ListView>

        <Label Text="Version 1.1.36" HorizontalTextAlignment="Center" />
    </StackLayout>
</ContentPage>